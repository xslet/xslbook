<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="application/xml" href="unit-test.xsl"?>

<describe title="&lt;value&gt;">

 <it title="should get a value at specified path '.'">
  <compute><value of=".">A<b>B<c>C</c>b</b>a</value></compute>
  <expect>A</expect>
 </it>


 <it title="should print prefix and suffix by @prefix and @suffix">
  <compute><value of="." prefix="[" suffix="]">A<b>B<c>C</c>b</b>a</value></compute>
  <expect>[A]</expect>
 </it>


 <it title="should print prefix and suffix by &lt;attr&gt;">
  <compute><value of=".">A
   <attr name="prefix">{</attr>
   <attr name="suffix">}</attr>
  </value></compute>
  <expect>{A}</expect>
 </it>


 <it title="should get a value at absolute path">
  <compute><value of="/describe/dataset/aaa" /></compute>
  <expect>A1</expect>
 </it>


 <it title="should get a value at relative path">
  <compute><value of="aaa/bbb">
   <aaa><bbb>CCC</bbb></aaa>
  </value></compute>
  <expect>CCC</expect>
 </it>


 <it title="should get a value at a path by &lt;attr&gt;">
  <compute><value>
   <attr name="of">/describe/dataset/aaa</attr>
  </value></compute>
  <expect>A1</expect>
 </it>


 <it title="should get a value at relative path with @data-src">
  <compute><value of="/List/Item" data-src="data/value.data.xml" /></compute>
  <expect>ABC</expect>
 </it>


 <it title="should get a value at relative path with data-src by &lt;attr&gt;">
  <compute><value of="/List/Item">
   <attr name="data-src">data/value.data.xml</attr>
  </value></compute>
  <expect>ABC</expect>
 </it>


 <it title="should not get a value of child or descendant element at specified path">
  <compute><value of="/describe/dataset/aaa" /></compute>
  <expect>A1</expect>
 </it>


 <it title="should get a value at a path and an index">
  <compute><value of="/describe/dataset/aaa/bbb[2]" /></compute>
  <expect>B2</expect>
 </it>


 <it title="should get a value at a path and indexes">
  <compute><value of="/describe/dataset/aaa[2]/bbb[1]" /></compute>
  <expect>B3</expect>
 </it>


 <it title="should get a value at a path and an attribute">
  <compute><value of="/describe/dataset/aaa/bbb[@id='b2']" /></compute>
  <expect>B2</expect>
 </it>


 <dataset>
  <aaa>A1
   <bbb>B1</bbb>
   <bbb id="b2">B2</bbb>
  </aaa>
  <aaa>
   <bbb>B3</bbb>
  </aaa>
 </dataset>

</describe>
